<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--这里的namespace 对应 UserDaoMapper 类-->
<mapper namespace="com.xeon.dao.UserDaoMapper">

    <select id="getUsers" resultType="User">
        select *
        from user;

    </select>


    <select id="getUserById" resultType="User" parameterType="int">
        select *
        from user
        where id = #{id}
    </select>
    <select id="getUsersLike" resultType="User">
        select *
        from user
        where name like #{value}
    </select>


    <insert id="addUser" parameterType="User">
        insert into user(gid, name, default_company_code, org_id)
        values (#{gid}, #{name}, #{default_company_code}, #{org_id})
    </insert>

    <update id="updateUser" parameterType="User">

        update user
        set gid=#{gid},
            name=#{name},
            default_company_code=#{default_company_code},
            org_id=#{org_id}
        where id = #{id}
    </update>

    <delete id="deleteUser" parameterType="User">
        delete
        from user
        where id =
              #{id}

    </delete>
</mapper>